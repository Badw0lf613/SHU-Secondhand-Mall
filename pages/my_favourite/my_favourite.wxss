/* pages/my_favourite/my_favourite.wxss */

.container{
  background-color: white;
  width: 100%;
}

.container_load{
  width: 320px;
  height: 500px;
  flex-direction: column;
  background-color: #f0f0f0;
}

.image_load{
  width: 600rpx;
  height: 600rpx;
  margin-top: 200rpx;
  margin-left: 80rpx;
}

.loading_text{
  display: flex;
  font-size: medium;
  text-align: center;
  margin-top: -140rpx;
  margin-left: 325rpx;
}

.goodslist{
  background: #fff;
  display: flex;
  flex: 1;
  flex-direction: column;
}
.goods{
  display: flex;
  flex: 1;
  flex-direction: row;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #ddd;
}
.grey_goods{
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #ddd;
  background: #ddd;
}
.good-img{
  padding: 5px;
  width: 80px;
  height: 80px;
}
.good-cont{
  display: flex;
  flex: 1;
  flex-direction: column;
  font-size: 14px;
}

.goods-navigator{
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  margin-bottom: 20rpx;
  width: 480rpx;
}
.good-name{
  display: flex;
  flex: 1;
  flex-direction: column;
  color: #555;
  justify-content: center;
}
.good-price{
  display: flex;
  flex: 1;
  flex-direction: row;
  justify-content: space-between;
  color:#e4393c;
  font-weight: 600;
}

.go_to_buy{
  display: flex;
  width: 210rpx;
  height: 70rpx;
}

.buy_btn{
  height: 60rpx;
  width: 160rpx;
  font-size: 10px;
  margin-top: 150rpx;
  margin-left: -170rpx;
  background: white;
  color: green;
}
.delete{
  width: 60rpx;
  height: 60rpx;
}

.delete_img{
  width: 50rpx;
  height: 50rpx;
}