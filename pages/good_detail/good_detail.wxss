/* pages/good_detail/good_detail.wxss */


.container{
  width: 320px;
  height: 500px;
  flex-direction: column;
  background-color: #f0f0f0;
}

.image{
  width: 600rpx;
  height: 600rpx;
  margin-top: 200rpx;
  margin-left: 80rpx;
}

.loading_text{
  display: flex;
  font-size: medium;
  text-align: center;
  margin-top: -140rpx;
  margin-left: 325rpx;
}

.goods-swiper .slide {
  width: 100%;
  height: 600rpx;
}

.goods-swiper .slide-image {
  width: 100%;
  display: block;
}

.weui-cells:nth-child(1) {
  margin-top: 0;
}

.weui-cell__bd view {
  margin-top: 10rpx;
}

.weui-cell__bd .title {
  margin-top: 0;
  font-size: 12pt;
}

.weui-cell__bd .desp {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 9pt;
  color: #666;
}

.weui-cell__bd .meta {
  font-size: 12pt;
  font-weight: bold;
  color: #ff4a00;
}

.select .weui-cell__bd {
  padding: 30rpx 14rpx;
}

.weui-cells.select {
  margin-top: 10rpx;
}

.on-sale text{
  display: inline-block;
  margin-left: 10rpx;
  font-size: 11pt;
}
.on-sale text:first-child{
  margin-left: 30rpx;
}
.on-sale text:nth-child(2){
  margin-left: 40rpx;
  padding: 0 20rpx;
  color: #228B22;
  border: 1px solid #228B22;
  border-radius: 4rpx;
}

.weui-cell__bd.selected {
  padding: 14rpx;
}

.weui-cell__bd.selected text {
  display: inline-block;
  margin-left: 30rpx;
  font-size: 11pt;
}

.weui-cell__bd.selected text:nth-child(1) {
  margin-left: 0;
}

.weui-cell__subtitle,
.weui_cell__num {
  font-size: 10pt;
  color: #9c9c9c;
}

.weui-cell_promise {
  padding: 10rpx 36rpx;
}

.weui-cell__bd.intro {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 9pt;
}

.weui-cell__hd.success image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.user-operation {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  z-index: 2;
  border-top: 1px solid #efefef;
}

.cart {
  flex: 1;
  height: 100rpx;
  background: #fff;
}

.cart image {
  width: 60rpx;
  height: 60rpx;
  position: relative;
  top: 18rpx;
  left: 20rpx;
}
.cart .badge{
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  position: absolute;
  top: 10rpx;
  left: 60rpx;
  font-size: 11px;
  color: #fff;
  text-align: center;
  z-index: 2;
  background: #228B22;
  border-radius: 50%;
}
.add-cart,
.btn-buy-now {
  flex: 3;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  background: #228B22;
}

.btn-buy-now {
  background: green;
}

.goods-intro .tab-select{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  margin-top: 14rpx;
  background: #fff;
}
.brief,.parameter{
  flex: 1;
  font-size: 10pt;
  text-align: center;
}
.tab-select text{
  padding: 16rpx;
}
.on{
  color: #ff6700;
  border-bottom: 2px solid #ff6700;
}
.goods-intro image{
  display: block;
  width: 100%;
}
.parameter-info,.brief-info{
  display: none;
}
.show{
  display: block;
}


.page_hd{
  width: 100%;
  overflow: hidden;
  margin: auto;
  font-size: medium;
  background-color: white;
  border-left: 8rpx solid rgb(9, 245, 60);
  border-bottom: 1rpx solid rgba(117, 116, 116, 0.527);
  border-top: 1rpx solid rgba(117, 116, 116, 0.527);
 }

 .title{
   margin: 20rpx;
 }

.page-body {
  display: flex;
  flex-direction: column;
  /* margin: 30rpx;
  padding-right: 37rpx; */
  padding: 30rpx;
}


.scr-view{
  height: 80%;
  margin-bottom: 180rpx;
}