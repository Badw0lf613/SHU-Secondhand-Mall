/* pages/sell.wxss */

.sell_page{
  width: 100%;
  margin: auto;
  overflow: hidden;
 }

 .page_hd{
  width: 100%;
  overflow: hidden;
  margin: auto;
  font-size: medium;
  background-color: white;
  border-left: 8rpx solid rgb(9, 245, 60);
  border-bottom: 1rpx solid rgba(117, 116, 116, 0.527);
  border-top: 1rpx solid rgba(117, 116, 116, 0.527);
 }
 
.step_title{
  margin: 10rpx;
}
.image_box{
  width: 100%;
  display: flex; 
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  background-color: white;
  border-left: 1rpx solid rgba(117, 116, 116, 
  0.527);
  border-bottom: 1rpx solid rgba(117, 116, 116, 
  0.527);
  border-left: 1rpx solid rgba(117, 116, 116, 
  0.527);
}

.img_box{
 border: 5rpx;
 border-style: solid;
 border-color: rgba(0, 0, 0, 0.452);
 width: 200rpx;
 height: 200rpx;
 margin-left: 35rpx;
 margin-top: 20rpx;
 margin-bottom: 20rpx;
 position: relative;
}

.image{
  width: 100%;
  height: 100%;
 }

 .delete{
  width:50rpx;
  height:50rpx;
  border-radius:50%;
  position:absolute;
  right:-20rpx;
  top:-20rpx;
 }
.goods_info{
  width: 100%;
}

.info_text{
  font-size: small;
  margin: 10rpx;
}

.input_info{
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}
 .input{
  width: 95%;
  margin-left: 15rpx;
  background-color: white;
  border: 1rpx solid #D9D9D9;
 }

.submit{
  width: 100%;
}
.submit_btn{
  font-size: small;
  display: flex;
  width: 128rpx;
  height: 80rpx;
  margin-left: 300rpx;
  margin-top: 20rpx;
}